<h1 style='text-align: center;'>Badges&nbsp;<%= link_to 'New Badge', new_badge_path, style:'color:#FFFFFF;', class: "btn btn-large btn-primary", method: :get %></h1>
<div class="col-md-6 col-md-offset-3">
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan=6><%= paginate @badges %></th>
    </tr>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td><%= paginate @badges %></td>
    </tr>
  </tfoot>

  <tbody>
    <% @badges.each_with_index do |badge,index| %>
      <tr>
        <td><%= @basecount+index+1 %></td>
        <td><%= badge.name %></td>
        <td><%= badge.subject.nil? ? "" : badge.subject.name %></td>
        <td><%= link_to 'Show', badge %></td>
        <td><%= link_to 'Edit', edit_badge_path(badge) %></td>
        <td><%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
