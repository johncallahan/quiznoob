<h1 style='text-align: center;'>Answers&nbsp;<%= link_to 'New Answer', new_answer_path, style:'color:#FFFFFF;', class: "btn btn-large btn-primary", method: :get %></h1>
<div class="col-md-6 col-md-offset-3">
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan=3><%= paginate @answers %></th>
    </tr>
    <tr>
      <th></th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td><%= paginate @answers %></td>
    </tr>
  </tfoot>

  <tbody>
    <% @answers.each_with_index do |answer,index| %>
      <tr>
        <td><%= @basecount+index+1 %></td>
        <td><%= answer.name %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

