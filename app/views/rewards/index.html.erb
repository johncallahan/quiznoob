<h1 style='text-align: center;'>Rewards</h1>
<div class="col-md-6 col-md-offset-3">
<%= button_to 'New Reward', new_reward_path, method: :get %>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan=9><%= paginate @rewards %></th>
    </tr>
    <tr>
      <th></th>
      <th>Enabled</th>
      <th>Name</th>
      <th>Description</th>
      <th>Flavor</th>
      <th>Event</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td><%= paginate @rewards %></td>
    </tr>
  </tfoot>

  <tbody>
    <% @rewards.each_with_index do |reward,index| %>
      <tr>
        <td><%= @basecount+index+1 %></td>
        <td><%= reward.enabled %></td>
        <td><%= reward.name %></td>
        <td><%= reward.description %></td>
        <td><%= reward.flavor %></td>
        <td><%= reward.event %></td>
        <td><%= reward.cost %></td>
        <td><%= link_to 'Show', reward %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</dev>
