<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @question.name %>
</p>
<% if @question.imageurl != nil %>
<p>
  <strong>Image URL:</strong>
  <%= image_tag("#{@question.imageurl}", height: '200', width: '300') %>
</p>
<% end %>
<p>
  <strong>Quizzes:</strong>
  <% @question.quizzes.each do |quiz| %>
    <%= quiz.name %> (<%= quiz.subject.name %>)<br/>
  <% end %>
</p>
<% @question.answers.each do |answer| %>
<p>
  <%= link_to answer.name, answer_path(answer) %><%= answer == @question.answer ? "*" : "" %><br/>
</p>
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
