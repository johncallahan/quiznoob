<h1 style='text-align: center;'>Questions</h1>
<div class="col-md-6 col-md-offset-3">
<table>
<tr>
<td><%= button_to 'New Question', new_question_path, method: :get %></td>
<td>&nbsp;</td>
<td><%= button_to 'Export', export_questions_path(format: "xls") %></td>
<td>&nbsp;</td>
<td>
<%= form_tag import_questions_path, multipart: true do %>
<table><tr><td><%= submit_tag "Import" %></td><td>&nbsp;</td><td><%= file_field_tag :file %></td></tr></table>
<% end %>
</td>
</tr>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan=5><%= paginate @questions %></th>
    </tr>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Points</th>
      <th>Quiz</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td><%= paginate @questions %></td>
    </tr>
  </tfoot>

  <tbody>
    <% @questions.each_with_index do |question,index| %>
    <%   question.quizzes.each do |quiz| %>
      <tr>
        <td><%= @basecount+index+1 %></td>
        <td><%= question.name %></td>
        <td><%= question.points %></td>
        <td><%= quiz.name %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%   end %>
    <% end %>
  </tbody>
</table>
</div>

