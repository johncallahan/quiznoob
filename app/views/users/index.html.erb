<h1 style='text-align: center;'>Users</h1>
<div class="col-md-6 col-md-offset-3">
<%= button_to 'New User', new_user_path, method: :get %>
<table class="table table-striped">
    <thead>
      <tr>
        <th colspan=7><%= paginate @users %></th>
      </tr>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Email</th>
        <th>Hearts</th>
        <th>Account</th>
        <th>Access Token</th>
        <th>Last Login</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user,index| %>
        <tr>
          <td><%= @basecount+index+1 %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td><%= user.hearts %></td>
          <td><%= user.account %></td>
          <td><%= user.access_token %></td>
          <td><%= user.lastlogin ? user.lastlogin.in_time_zone : "never" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
