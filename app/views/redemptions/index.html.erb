<p id="notice"><%= notice %></p>

<h1 style='text-align: center;'>Redemptions</h1>
<br><br>
<div class="col-md-6 col-md-offset-3">
<%= link_to 'New Redemption', new_redemption_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Reward</th>
      <th>Hearts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @redemptions.each do |redemption| %>
      <tr>
        <td><%= redemption.user.name %></td>
        <td><%= redemption.reward.name %></td>
        <td><%= redemption.cost %></td>
        <td><%= link_to 'Show', redemption %></td>
        <td><%= link_to 'Edit', edit_redemption_path(redemption) %></td>
        <td><%= link_to 'Destroy', redemption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

