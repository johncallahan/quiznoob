<h1 style='text-align: center;'>Assignments</h1>
<div class="col-md-6 col-md-offset-3">
<br/>
<% @users.each do |user| %>
<table>
  <caption><b><%= user.name %></b></caption>
  <thead>
    <tr>
      <th></th>
      <th>Quiz</th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= check_box_tag 'enabled', quiz.id, @user_quizzes.any?{|uq| uq.quiz_id == quiz.id && uq.user_id == user.id}, data: { remote: true, url: url_for(action: :toggle, quiz_id: quiz.id, user_id: user.id), method: "POST" } %></td>
	<td><%= quiz.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<% end %>
