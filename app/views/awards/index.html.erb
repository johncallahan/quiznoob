<p id="notice"><%= notice %></p>

<h1 style='text-align: center;'>Awards</h1>
<br><br>
<div class="col-md-6 col-md-offset-3">
<%= link_to 'New Award', new_award_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Hearts</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.source ? award.source.user.name : "" %></td>
        <td><%= award.source ? award.source.points : "" %></td>
        <td><%= award.source %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

