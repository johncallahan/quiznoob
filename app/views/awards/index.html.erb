<h1 style='text-align: center;'>Awards&nbsp;<%= link_to 'New Award', new_award_path, style:'color:#FFFFFF;', class: "btn btn-large btn-primary", method: :get %></h1>
<div class="col-md-6 col-md-offset-3">
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan=6><%= paginate @awards %></th>
    </tr>
    <tr>
      <th></th>
      <th>User</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td><%= paginate @awards %></td>
    </tr>
  </tfoot>

  <tbody>
    <% @awards.each_with_index do |award,index| %>
      <tr>
        <td><%= @basecount+index+1 %></td>
        <td><%= award.source ? award.source.user.name : "" %></td>
        <td><%= award.source %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

