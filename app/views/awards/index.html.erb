<p id="notice"><%= notice %></p>

<h1>Listing Awards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Hearts</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.source.user.name %></td>
        <td><%= award.source.points %></td>
        <td><%= award.source %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

